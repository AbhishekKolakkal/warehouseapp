<!DOCTYPE html>
<html>
<head>
	<title></title>
    <meta charset="utf-8">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
<% if (products.length > 0) { %>
	<div class="row">
    <h1 style="text-align: center">Info</h1>
    <div style="width: 30%; margin: 25px auto;">
    	<% products.forEach(function(element){ %>
        <form action="/delete/<%= element.productId %>?_method=DELETE" method="POST">
            <div class="form-group">
            	<p>Product Id</p>
                <input class="form-control" value="<%= element.productId %>" readonly>
            </div>
            <div class="form-group">
            	<p>Product Name</p>
                <input class="form-control" type="text" value="<%= element.productName %>" readonly>
            </div>
            <div class="form-group">
            	<p>Product Type</p>
                <input class="form-control" type="text" value="<%= element.productType %>" readonly>
            </div>
             <div class="form-group">
            	<p>Date of In</p>
                <input class="form-control" type="text" value="<%= element.dateOfIn %>" readonly>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Delete</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
    <% }) %>
</div>   
<% } else { %>
<div class="container-fluid text-center">
    <h1 class="alert alert-danger">Cannot Find the Product</h1>
    <a href="/">Go Back</a>
</div>
<% } %>
</body>
</html>